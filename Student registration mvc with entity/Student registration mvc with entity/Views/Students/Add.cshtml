@{
}
@model Student_registration_mvc_with_entity.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">

<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name" />
</div>

<div class="mt-3">
    <label class="form-label">Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Email" />
</div>

<div class="mt-3">
    <label class="form-label">PhoneNumber</label>
    <input type="number" class="form-control" asp-for="PhoneNumber" />
</div>

<div class="mt-3">
    <label class="form-label">DateOfBirth</label>
    <input type="date" class="form-control" asp-for="DateOfBirth" />
</div>

<div class="mt-3">
   <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>