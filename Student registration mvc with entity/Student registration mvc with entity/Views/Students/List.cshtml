@{
}

@model List<Student_registration_mvc_with_entity.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
    <thead>
         <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Surname</th>
              <th>E-mail</th>
              <th>PhoneNumber</th>
              <th>StudentID</th>
              <th>DateOfBirth</th>
         </tr>
    </thead>
    <tbody>
     @foreach (var student in Model)
        {
            <tr>
                <th>@student.Id</th>
                <th>@student.Name</th>
                <th>@student.Surname</th>
                <th>@student.Email</th>
                <th>@student.PhoneNumber</th>
                <th>@student.StudentId</th>
                <th>@student.DateOfBirth</th>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
